<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvMeroKahiPani"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        app:cardBackgroundColor="@color/tiles_background_color"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:elevation="@dimen/_100sdp"
                android:visibility="visible"
                android:id="@+id/ivRemove"
                android:padding="@dimen/_8sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_close_icon"
                android:background="@drawable/bg_view"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ivFilePreview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/ic_water_tap"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1.2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/lite_gray"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"
                android:id="@+id/clAddFile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/AddFile"
                    android:elevation="@dimen/_202sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivAdd"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_baseline_add"
                        android:layout_height="wrap_content"
                        app:tint="@color/sub_text_color" />
                    <TextView
                        android:id="@+id/tvFileName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="this is test file"
                        android:textColor="@color/sub_text_color"
                        app:layout_constraintTop_toBottomOf="@id/ivAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>





                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvFileType"
                android:padding="@dimen/_4sdp"
                android:background="@color/background"
                android:text="this is example text"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>